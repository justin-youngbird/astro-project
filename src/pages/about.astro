---
import BaseLayout from '../layouts/BaseLayout.astro';
import '../styles/global.css'
//local variables
const pageTitle = 'About Me';
const identity = {
    firstname: "Justin Youngbird",
    country: "USA",
    occupation:"student",
    hobbies:['computers', 'video games', 'writing']
};
const skills = ['HTML', 'CSS', 'Javascript','GDscript', 'Python', 'PHP', 'React',  'Astro',  'C++', 'Markdown'];
const happy = true;
const finished = false;
const goal = 3;
//css variables
const skillColor = 'navy';
const fontWeight = 'bold'
const textCase = 'capitalize'

---
<BaseLayout PageTitle={pageTitle}>
    <style define:vars={{skillColor, fontWeight, textCase}}>
        h1 {
          color: purple;
          font-size: 4rem;
        }

        .skill{
            color: var(--skillColor);
            font-weight: var(--fontWeight);
            text-transform: var(--textCase);
        }
      </style>
  
    <h1>My Astro Site</h1>
    <h1>{pageTitle}</h1>

    <p>My name is Justin Youngbird and i am learning how to use Astro... yea wild</p>

    <p>I will update this site as a go though the tooterals</p>

    <p>Here are a few facts about me</p> 
    <ul>
        <li>My name {identity.firstname}</li>
        <li>I live in {identity.country} and i am a {identity.occupation}.</li>
        {identity.hobbies.length >= 2 &&
        <li>Two of my hobbies are: {identity.hobbies[0]} and {identity.hobbies[1]} </li>}
    </ul>
    <p>My skills are:</p>
    <ul>
        {skills.map((skill) => <li class="skill">{skill}</li>)}
    </ul>
    {happy && <p>I am happy to lean Astro</p>}
    {finished && <p>I finished this tooteral</p>}
    {goal === 3 ? <p>My goal is to finish in 3 days</p> : <p>My goal is not 3 days</p>}
  </BaseLayout>